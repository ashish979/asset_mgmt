<div class="page-header">
  <h2><%=t '.title', :default => "Property Groups"  %></h2>
</div>

<%= render 'form' %>
<% if @property_groups.present? %>
  <div id="pageEnteriesInfo" align='right'><%= page_entries_info @property_groups, :model => 'PropertyGroup' %></div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Associated Properties</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @property_groups.each do |property_group| %>
        <tr>
          <td><%= link_to property_group.name, property_group_path(property_group) %></td>
          <td><%= property_group.properties.size %></td>
          <td>
            <%= link_to 'Manage Properties', property_group_path(property_group), :class => "btn btn-primary"  %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        property_group_path(property_group),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-medium btn-danger' %>    
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id='pagination'><%= will_paginate @property_groups %></div>
<% end %>
