<div class="page-header">
  <h2><%= @property_group.name %> properties</h2>
</div>
<%= render 'property_groups/property_form' %>
<% if @properties.present? %>
  <div id="pageEnteriesInfo" align='right'><%= page_entries_info @properties %></div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.name %></td>
          <td>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), property_group_property_path(property.property_group, property), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-medium btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id='pagination'><%= will_paginate @properties %></div>
<% else %> 
  <br /><strong>There are no properties</strong>
<% end %>