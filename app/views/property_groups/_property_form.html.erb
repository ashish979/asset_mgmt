<%= form_for [@property.property_group, @property], :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => "shared/errors", :locals => { :obj => @property } %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
      <%= f.hidden_field :property_group_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>

