<%= form_for @asset.becomes(Asset), :method => :put, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => "shared/errors", :locals => { :obj => @asset } %>
  <div class="control-group">
    <%= f.label :property_groups, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:property_groups, show_property_groups, :include_blank => true) %>
      <%= f.submit "Add Property Group", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<div class="lightLine"></div>
