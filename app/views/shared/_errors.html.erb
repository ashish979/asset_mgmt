<div align='center'>
  <% if obj.errors.any? %>
    <div id="error_explanation">
      <% if obj.class == Asset %>
        <% filter_paperclip_error(obj) %>
      <% end %>
      <h3><%= pluralize(obj.errors.count, "error") %>
        prohibited it from being saved:</h3>
      <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
