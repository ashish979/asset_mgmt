<div class="loginAndResetPasswordPage">
  <div class="page-header">
    <h2><%=t '.title', :default => "Please sign in to continue"  %></h2>
  </div>

  <div class="login_form">
    <%= form_for(resource, :as => resource_name, :url => employee_session_path, :html => { :class => 'form-horizontal' }) do |f| %>

  		<div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password, :class => 'text_field' %>
        </div>
      </div>
  		<% if devise_mapping.rememberable? -%>
  		  <div class="control-group">
  		  	<%= f.label :remember_me, :class => 'control-label' %>
  			  <div class="controls">
  			    <%= f.check_box :remember_me, :class => 'text_field' %>
  			  </div>
  			</div>
  		<% end -%>
  		<div class="form-actions">
        <%= f.submit "Sign In", :class => 'btn btn-primary' %>
        <%= render :partial => "employees/shared/links" %>
      </div>		
  	<% end %>
  </div>
</div>  
