<div class="page-header">
  <h2><%=t '.title', :default => "Update Password" %></h2>
</div>

<%= form_for(@employee, :url => update_password_employees_path , :method => :put, :html => { :class => 'form-horizontal' } ) do |f|%>
	<%= render :partial => "shared/errors", :locals => { :obj => @employee } %>
  <div class="control-group">
    <%= f.label :current_password, :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls">
      <%= f.password_field :current_password, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label t('.password', :default => t("helpers.labels.password")), :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label t('.password_confirmation', :default => t("helpers.labels.password_confirmation")), :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Update', :class => 'btn btn-primary' %>
  </div>
<% end %>
