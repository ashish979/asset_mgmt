<div class="loginAndResetPasswordPage">
  <div class="page-header">
    <h2><%=t '.title', :default => "Forgot your password?" %></h2>
  </div>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :class => 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary' %>
      <%= render :partial => "employees/shared/links" %>
    </div>
  <% end %>
</div>