<%= form_for @ticket, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => "shared/errors", :locals => { :obj => @ticket } %>  
  
  <div class="control-group adjustHeight">
    <%= f.label :ticket_type_id, :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls adjustHeight">
      <%= show_ticket_type(@ticket, f) %>
    </div>
  </div>

  <div class="control-group adjustHeight" id="showAssetsForTicket">
    <%= f.label :asset, :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls adjustHeight">
      <%= show_assets_for_tickets(f) %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %><span class="requiredField">*</span>
    <div class="controls adjustHeight">
      <%= f.text_area :description, :disabled => f.object.persisted?, :class => 'text_area input-xlarge' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
     <%= link_to 'Cancel', request.referer %>  
  </div>
<% end %>

<script>
  var tkt_typ = $("#ticket_ticket_type_id option:selected").text();
  if(tkt_typ === "New Hardware" || tkt_typ === "- Select -"){
    $("#showAssetsForTicket").addClass("hidden");
    $("#ticket_asset_id").attr("disabled", true)
  }  
</script>