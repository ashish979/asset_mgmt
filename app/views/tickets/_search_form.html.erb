<%= form_tag search_tickets_path, :html => { :class => 'form-horizontal'},:remote => true, :method => :get,id: "ticketSerachForm" do %>
  <%= hidden_field_tag :state, params[:state] %>
  <div class="controls form-inline">
    <%= label_tag :search_for, nil, :class => 'control-label, boldLableName' %>&nbsp;
    <%= select_tag "category", options_for_select(TICKET_SEARCH_OPTIONS), :prompt => "Select" %>
    <%= text_field_tag :search_query, nil, :class => "text_field input-large", :placeholder => "Enter asset/employee name or ticket id" %>
    <%= submit_tag "Search", :class => 'btn btn-primary', :id => "ticketSearchFormButton", data: { disable_with: "Please wait..." } %>
    <span id="ticketSearchErrorSpan"></span>
  </div>
  
<% end %>


